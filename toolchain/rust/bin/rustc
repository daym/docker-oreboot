#!/bin/sh

set -e

WD="${PWD}"

# Move out until .idea is visible underneath directly
for s in `seq 1 100`
do
        if [ -d .idea ]
        then
                break
        fi
        if [ -d .config ] # $HOME
        then
                break
        fi
        cd ..
done

exec in-rust-nightly -w "${WD}" rustc "$@"
